/* 昵称设置 */
.nickname-option.data-v-201c0da5 {
  display: flex;
  align-items: center;
  padding: 20rpx;
  background: #f8f8f8;
  border-radius: 12rpx;
  margin-bottom: 16rpx;
}
.checkbox.data-v-201c0da5 {
  width: 28rpx;
  height: 28rpx;
  border: 2rpx solid #d0d0d0;
  border-radius: 6rpx;
  margin-right: 12rpx;
  position: relative;
}
.checkbox.checked.data-v-201c0da5 {
  background: #ff8fb3;
  border-color: #ff8fb3;
}
.checkbox.checked.data-v-201c0da5::after {
  content: "";
  position: absolute;
  width: 12rpx;
  height: 20rpx;
  border: solid #fff;
  border-width: 0 2rpx 2rpx 0;
  transform: rotate(45deg);
  top: 50%;
  left: 50%;
  margin-top: -10rpx;
  margin-left: -8rpx;
}
.option-text.data-v-201c0da5 {
  flex: 1;
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
}
.current-nickname.data-v-201c0da5 {
  font-size: 24rpx;
  color: #999;
}
.custom-nickname.data-v-201c0da5 {
  background: #f8f8f8;
  border-radius: 12rpx;
  padding: 20rpx;
}
.nickname-input.data-v-201c0da5 {
  width: 100%;
  padding: 16rpx;
  border: 1rpx solid #e5e5e5;
  border-radius: 8rpx;
  font-size: 28rpx;
  background: #ffffff;
  margin-bottom: 8rpx;
}
.char-count.data-v-201c0da5 {
  display: block;
  font-size: 22rpx;
  color: #999;
  text-align: right;
}

