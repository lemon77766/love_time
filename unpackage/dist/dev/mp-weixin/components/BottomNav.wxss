
.bottom-nav {
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  background-color: #fff;
  display: flex;
  justify-content: space-around;
  padding: 20rpx 0;
}
.nav-item {
  display: flex;
  flex-direction: column;
  align-items: center;
}
.nav-icon {
  width: 36rpx;
  height: 36rpx;
  object-fit: contain;
}
.nav-text {
  font-size: 24rpx;
  color: #8f8f94;
  margin-top: 10rpx;
}
